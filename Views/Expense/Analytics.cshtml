@model IEnumerable<ExpenseCategorySummary>

<h2>Expense Analytics</h2>
<div>
    <a asp-controller="Expense" asp-action="MonthlySummary">View Monthly Report</a>
    <a asp-controller="Expense" asp-action="YearlyExpenditure">View Yearly Report</a>

</div>
<canvas id="expenseChart" width="100px" height="100px"></canvas>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('expenseChart').getContext('2d');
        var chartData = {
            labels: @Html.Raw(Json.Serialize(Model.Select(m => m.CategoryName))),
            datasets: [{
                label: 'Expenses by Category',
                data: @Html.Raw(Json.Serialize(Model.Select(m => m.TotalAmount))),
                backgroundColor: ['#ff6384', '#36a2eb', '#ffcd56', '#4bc0c0', '#9966ff', '#ff9f40'],
                hoverBackgroundColor: ['#ff6384', '#36a2eb', '#ffcd56', '#4bc0c0', '#9966ff', '#ff9f40']
            }]
        };

        var myPieChart = new Chart(ctx, {
            type: 'pie',
            data: chartData,
        });
    </script>
}
